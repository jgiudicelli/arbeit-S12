<%= simple_form_for @task, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Task</legend>

		<%= f.input :name %>
		<%= f.input :due_on, :label => "Due by", :as => :string, :input_html => {:class => "datepicker"} %>				
		<%= f.input :project_id, :collection => Project.current.alphabetical, :include_blank => true %>
		<%= f.input :priority, :collection => Task::PRIORITY_LIST, :include_blank => true %>
		<%= f.input :completed %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', tasks_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
